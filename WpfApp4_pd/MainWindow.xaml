<Window x:Class="WpfApp4_pd.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp4_pd"
        mc:Ignorable="d"
        Title="MainWindow" MaxHeight="500" MinHeight="500" MaxWidth="500" MinWidth="500" WindowStartupLocation="CenterScreen">

    <StackPanel>

        <Canvas Margin="0 100 0 0" x:Name="canvas" Height="300">
            <Label Content="Хотите ли вы стать миллионером?" Margin="120 0 0 0" />

            <Button Click="btn_YesClicked" x:Name="btnYes" Content="Да" Width="70" Height="25" MouseEnter="btn_MouseEnter" Canvas.Left="116" Canvas.Top="60" Panel.ZIndex="1" IsTabStop="False"/>

            <Button Content="Нет"  Width="70" Height="25"  Margin="260 60 0 0" Click="Button_Click"/>
        </Canvas>

        <Label Content="Если кнопка [Да] вышла за рамки формы, нажми на [Нет] и будет тебе счастье" Foreground="#FFE54141" FontSize="8" HorizontalContentAlignment="Center"/>
    </StackPanel>
</Window>
